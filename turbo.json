{
  "$schema": "https://turborepo.org/schema.json",
  "ui": "tui",
  "tasks": {
    "topo": {
      "dependsOn": [
        "^topo"
      ]
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".expo/**",
        ".output/**",
        "dist/**"
      ],
      "env": [
        "VITE_DEPLOY_DOMAIN",
        "VITE_POWERSYNC_DOMAIN",
        "VITE_PREVIEW_WARNING",
        "VITE_ENABLE_DEVTOOLS"
      ]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "typecheck": {
      "dependsOn": [
        "^topo",
        "^build"
      ],
      "outputs": [
        "**/*.tsbuildinfo"
      ]
    },
    "clean": {
      "cache": false
    },
    "push": {
      "cache": false,
      "interactive": true
    },
    "studio": {
      "cache": false,
      "persistent": true
    },
    "generate": {
      "cache": false
    },
    "test": {
      "cache": false
    }
  },
  "globalEnv": [
    "NODE_ENV",
    "DATABASE_URL",
    "TEST_URL",
    "SITE",
    "BETTER_AUTH_SECRET",
    "RESEND_API_KEY",
    "RESEND_FROM_EMAIL"
  ]
}