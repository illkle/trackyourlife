{
  "extends": "@tyl/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@shad*": ["src/@shad/*"]
    },
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "jsx": "react-jsx",
    "checkJs": false,
    "types": ["vite/client"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../../packages/helpers/src/data/dbHooks.ts",
    "../../packages/helpers/src/data/TrackableFlagsProvider.tsx",
    "../../packages/helpers/src/data/trackableFlags.ts"
  ],
  "exclude": ["node_modules"]
}
