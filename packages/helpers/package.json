{
  "name": "@tyl/helpers",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./src/*.ts"
    },
    "./color/*": {
      "types": "./dist/color/*.d.ts",
      "default": "./src/color/*.ts"
    },
    "./data/*": {
      "types": "./dist/data/*.d.ts",
      "default": "./src/data/*.ts"
    },
    "./date/*": {
      "types": "./dist/date/*.d.ts",
      "default": "./src/date/*.ts"
    },
    "./data/TrackableMetaProvider": {
      "types": "./dist/data/TrackableMetaProvider.d.ts",
      "default": "./src/data/TrackableMetaProvider.tsx"
    },
    "./data/TrackableDataProvider": {
      "types": "./dist/data/TrackableDataProvider.d.ts",
      "default": "./src/data/TrackableDataProvider.tsx"
    },
    "./data/TrackableFlagsProvider": {
      "types": "./dist/data/TrackableFlagsProvider.d.ts",
      "default": "./src/data/TrackableFlagsProvider.tsx"
    },
    "./error/normalizeError": {
      "types": "./dist/error/normalizeError.d.ts",
      "default": "./src/error/normalizeError.ts"
    },
    "./error/types": {
      "types": "./dist/error/types.d.ts",
      "default": "./src/error/types.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf .turbo node_modules",
    "lint": "oxlint .",
    "test": "vitest run",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@date-fns/tz": "catalog:",
    "@tanstack/react-db": "catalog:tanstack",
    "chroma-js": "^3.2.0",
    "date-fns": "catalog:",
    "drizzle-orm": "catalog:",
    "lodash-es": "^4.17.23",
    "millify": "^6.1.0",
    "use-context-selector": "^2.0.0",
    "uuid": "catalog:"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "catalog:",
    "@testing-library/react": "catalog:",
    "@tyl/db": "workspace:*",
    "@tyl/tsconfig": "workspace:*",
    "@types/chroma-js": "^3.1.2",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "catalog:react",
    "@types/react-dom": "catalog:react",
    "jsdom": "catalog:",
    "react": "catalog:react",
    "react-dom": "catalog:react",
    "typescript": "catalog:",
    "vitest": "catalog:",
    "zod": "catalog:"
  },
  "peerDependencies": {
    "react": "catalog:react",
    "zod": "catalog:"
  }
}
