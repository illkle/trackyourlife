{
  "name": "trackyourlife",
  "private": true,
  "engines": {
    "node": ">=20.12.0"
  },
  "packageManager": "pnpm@9.7.1",
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "db:push": "turbo -F @tyl/db push",
    "db:studio": "turbo -F @tyl/db studio",
    "db:gen": "turbo -F @tyl/db gen",
    "dev": "turbo watch dev",
    "dev:next": "turbo watch dev -F @tyl/nextjs...",
    "format": "turbo run format --continue -- --cache --cache-location node_modules/.cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location node_modules/.cache/.prettiercache",
    "lint": "turbo run lint --continue -- --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinsta2ll": "pnpm lint:ws",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "ui-add": "turbo run ui-add"
  },
  "devDependencies": {
    "@tyl/prettier-config": "workspace:*",
    "@turbo/gen": "^2.0.15-canary.2",
    "prettier": "^3.3.3",
    "turbo": "2.0.15-canary.2",
    "typescript": "^5.5.4"
  },
  "prettier": "@tyl/prettier-config"
}