{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "ts-node": {
    "esm": true,
    "module": "commonjs"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "server.ts", "postcss.config.cjs", "tailwind.config.cjs"],
  "exclude": ["node_modules"]
}
